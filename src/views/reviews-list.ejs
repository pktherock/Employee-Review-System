<h1 class="text-cneter">Pending Review List</h1>

<table class="table table-responsive table-striped">
  <thead>
    <tr>
      <th scope="col">Emp Email</th>
      <th scope="col">Assigned BY</th>
      <th scope="col">Assigned TO</th>
      <th scope="col">Assigned ON</th>
      <th scope="col">Status</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% if(reviews.length) { reviews.forEach(review => { %>
    <tr>
      <td scope="row"><%= review.assignedFor %></td>
      <td><%= review.assignedBy %></td>
      <td><%= review.assignedTo %></td>
      <td><%= new Date(review.createdAt).toLocaleString() %></td>
      <td><%= review.status %></td>

      <td>
        <% if(locals.roleValue === 777) { %>
        <a
          class="icon-link icon-link-hover deleteReview"
          style="
            --bs-icon-link-transform: translate3d(0, -0.125rem, 0);
            cursor: pointer;
          "
          reviewId="<%= review.id %>"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            height="1em"
            viewBox="0 0 448 512"
            class="ms-2"
          >
            <path
              d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"
            />
          </svg>
        </a>
        <% } if(review.assignedTo === locals.email && review.status ===
        "PENDING") { %>
        <a
          class="btn btn-primary ms-2"
          href="/api/v1/review/<%= review.id %>"
          role="button"
          >Review</a
        >
        <% } %>
      </td>
    </tr>
    <% }) } %>
  </tbody>
</table>
